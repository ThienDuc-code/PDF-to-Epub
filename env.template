# Google Cloud Document AI Configuration
# Copy this file to .env and fill in your actual values

# Google Cloud Project Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id-here
GOOGLE_CLOUD_LOCATION=eu
GOOGLE_CLOUD_PROCESSOR_VERSION=projects/YOUR_PROJECT_NUMBER/locations/eu/processors/YOUR_PROCESSOR_ID/processorVersions/YOUR_VERSION

# Input and Output Configuration
INPUT_PREFIX=gs://your-bucket-name/your-pdf-folder
OUTPUT_PREFIX=gs://your-bucket-name/docai-output

# Optional: Language hints for better OCR accuracy (comma-separated)
LANGUAGE_HINTS=en,fr,it,la

# Optional: Override date prefix (defaults to current date)
# DATE_PREFIX=2025-01-15

# Optional: Specific volume for single book operations
# STEM=HOL_Vol1

# Optional: Custom paths for merge operations
# BATCH_ROOT=gs://your-bucket-name/docai-output/2025-01-15/batch_clean
# MERGED_DIR=gs://your-bucket-name/docai-output/2025-01-15/merged_txt
# SRC_PREFIX=gs://your-bucket-name/docai-output/2025-01-15/batch_clean/
